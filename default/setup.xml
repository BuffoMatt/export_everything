<setup>
	<block title="Add-On for Event Push">
		<text>Configure Event Push Settings</text>
	</block>

	<block title="HTTP Event Collector Event Push (hep)" endpoint="deductiv/hep_hec_config" entity="hec">
		<input field="hec_host">
			<label>Destination Host</label>
			<type>text</type>
		</input>
		<input field="hec_token">
			<label>Destination Host Token Value</label>
			<type>text</type>
		</input>
		<input field="hec_port">
			<label>Destination Port</label>
			<type>text</type>
		</input>
		<input field="hec_ssl">
			<label>SSL</label>
			<type>bool</type>
		</input>
	</block>

	<block title="AWS S3 Event Push (s3ep)" endpoint="deductiv/hep_aws_config" entity="aws">
		<input field="default_region">
			<label>Default AWS Region</label>
			<type>text</type>
		</input>
		<input field="default_s3_bucket">
			<label>Default AWS S3 Bucket</label>
			<type>text</type>
		</input>
	</block>

	<block title="Add AWS S3 Credentials" endpoint="storage/passwords" entity="_new">
		<p>Please configure a dedicated IAM user for this functionality, with write access only to the buckets required.</p>
		<input field="realm">
			<label>AWS Region</label>
			<type>text</type>
		</input>
		<input field="name">
				<label>Access Key ID</label>
				<type>text</type>
		</input>
		<input field="password">
				<label>Secret Access Key</label>
				<type>password</type>
		</input>
	</block>
</setup>